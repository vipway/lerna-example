{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "publish": {
      "message": "chore(release): publish %v",
      "ignoreChanges": [
        "*.md",
        ".npmrc",
        "package.lock",
        "yarn.lock",
        ".eslintrc",
        ".eslintignore",
        ".gitignore"
      ]
    }
  }
}
